.order-container {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding-bottom: 30rpx;
}

/* 搜索栏 */
.search-bar {
  padding: 20rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  position: relative;
  border-bottom: 1rpx solid #f0f0f0;
  z-index: 10;
}

.search-input-wrap {
  flex: 1;
  height: 72rpx;
  background-color: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 30rpx;
  position: relative;
  display: flex;
  align-items: center;
}

.search-input {
  flex: 1;
  height: 72rpx;
  font-size: 28rpx;
  padding-left: 60rpx;
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 20rpx;
}

.search-clear {
  padding: 0 20rpx;
  font-size: 28rpx;
  color: var(--primary-color);
}

/* 过滤标签 */
.filter-tabs {
  display: flex;
  background-color: #fff;
  padding: 0 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-tab {
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: var(--gray-5);
  position: relative;
}

.filter-tab.active {
  color: var(--primary-color);
  font-weight: 500;
}

.filter-tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: var(--primary-color);
  border-radius: 2rpx;
}

/* 订单列表 */
.order-list {
  padding: 20rpx;
}

.order-card {
  position: relative;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.movable-area {
  height: 100%;
  width: 100%;
}

.movable-view {
  width: 100%;
  height: 100%;
  z-index: 2;
}

.order-content {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.order-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.order-no {
  font-size: 26rpx;
  color: var(--gray-5);
}

.order-status {
  font-size: 26rpx;
  font-weight: 500;
}

.status-pending {
  color: #ff9800;
}

.status-processing {
  color: var(--primary-color);
}

.status-completed {
  color: #52c41a;
}

.order-info {
  display: flex;
  font-size: 26rpx;
  color: var(--gray-5);
  margin-bottom: 20rpx;
}

.order-time {
  margin-right: 20rpx;
}

.order-items {
  padding: 20rpx 0;
  border-top: 1rpx solid #f5f5f5;
  border-bottom: 1rpx solid #f5f5f5;
  margin-bottom: 20rpx;
}

.order-item-summary {
  font-size: 28rpx;
  color: var(--gray-6);
}

.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-total {
  font-size: 28rpx;
}

.price {
  color: #ff6b00;
  font-weight: 600;
}

.order-actions {
  display: flex;
}

.order-actions .btn {
  margin-left: 20rpx;
  padding: 10rpx 20rpx;
  font-size: 26rpx;
}

/* 删除按钮 */
.delete-btn {
  position: absolute;
  top: 0;
  right: 0;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #ff4d4f;
  color: #fff;
  width: 150rpx;
  z-index: 1;
}

/* 空状态 */
.empty-state {
  padding: 100rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: var(--gray-4);
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.go-order-btn {
  margin-top: 40rpx;
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
}

/* 订单详情弹窗 */
.order-detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.order-detail-content {
  position: relative;
  width: 90%;
  height: 90%;
  background-color: #fff;
  border-radius: 16px;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.detail-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-title {
  font-size: 32rpx;
  font-weight: 600;
}

.detail-close {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 40rpx;
  color: var(--gray-5);
}

.detail-scroll {
  flex: 1;
  padding: 30rpx;
}

.detail-info {
  background-color: #f9f9f9;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.detail-label {
  color: var(--gray-5);
}

.detail-value {
  color: var(--gray-6);
  font-weight: 500;
}

.status-text {
  font-weight: 600;
}

.detail-section-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  color: var(--gray-6);
}

.detail-items {
  margin-bottom: 30rpx;
}

.detail-item-list {
  background-color: #f9f9f9;
  border-radius: 12rpx;
  padding: 10rpx;
}

.detail-item-card {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-item-card:last-child {
  border-bottom: none;
}

.detail-item-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.detail-item-info {
  flex: 1;
}

.detail-item-name {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.detail-item-price {
  font-size: 26rpx;
  color: var(--gray-5);
}

.detail-item-total {
  font-size: 28rpx;
  color: #ff6b00;
  font-weight: 500;
}

.detail-price {
  margin-bottom: 30rpx;
}

.detail-price-list {
  background-color: #f9f9f9;
  border-radius: 12rpx;
  padding: 20rpx;
}

.detail-price-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  color: var(--gray-5);
}

.detail-price-item.total {
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
  font-size: 30rpx;
  color: var(--gray-6);
  font-weight: 500;
}

.total-price {
  color: #ff6b00;
  font-weight: 600;
}

.detail-actions {
  display: flex;
  justify-content: flex-end;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.detail-actions .btn {
  margin-left: 20rpx;
} 