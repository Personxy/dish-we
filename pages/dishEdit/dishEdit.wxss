.dish-edit-container {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding-bottom: 120rpx;
}

/* 表单容器 */
.form-container {
  padding: 30rpx;
}

/* 表单部分 */
.form-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 30rpx;
  color: var(--gray-6);
}

.form-item {
  margin-bottom: 30rpx;
  position: relative;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 28rpx;
  color: var(--gray-5);
  margin-bottom: 20rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  font-size: 28rpx;
  border: 1rpx solid #f0f0f0;
  border-radius: 8rpx;
  background-color: #fff;
}

.form-picker {
  width: 100%;
  height: 80rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  font-size: 28rpx;
  border: 1rpx solid #f0f0f0;
  border-radius: 8rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.down-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 价格输入框 */
.price-input-wrapper {
  display: flex;
  align-items: center;
  width: 100%;
  height: 80rpx;
  box-sizing: border-box;
  border: 1rpx solid #f0f0f0;
  border-radius: 8rpx;
  background-color: #fff;
  padding: 0 20rpx;
}

.price-symbol {
  font-size: 28rpx;
  color: var(--gray-6);
  margin-right: 10rpx;
}

.price-input {
  border: none;
  padding: 0;
  height: 76rpx;
}

/* 图片上传 */
.image-uploader {
  width: 200rpx;
  height: 200rpx;
  border: 1rpx dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #f9f9f9;
}

.dish-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: var(--gray-4);
  font-size: 26rpx;
}

.upload-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

/* 文本域 */
.form-textarea {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  border: 1rpx solid #f0f0f0;
  border-radius: 8rpx;
  background-color: #fff;
}

.textarea-counter {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  font-size: 24rpx;
  color: var(--gray-4);
}

/* 底部按钮 */
.bottom-btns {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
  z-index: 10;
}

.bottom-btns .btn {
  width: 46%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: 500;
} 