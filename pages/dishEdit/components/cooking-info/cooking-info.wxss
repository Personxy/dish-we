/* 表单部分 */
.form-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 30rpx;
  color: #333;
}

.form-item {
  margin-bottom: 30rpx;
  position: relative;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

/* 难度选择器样式 */
.difficulty-selector {
  display: flex;
  align-items: center;
}

.star-container {
  display: flex;
}

.star {
  font-size: 40rpx;
  color: #ddd;
  margin-right: 10rpx;
}

.star.active {
  color: #ffb800;
}

.difficulty-text {
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #666;
}

/* 食材相关样式 */
.optional-text {
  font-size: 24rpx;
  color: #999;
  font-weight: normal;
}

.ingredients-list {
  margin-bottom: 20rpx;
}

.ingredient-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.ingredient-content {
  flex: 1;
}

.ingredient-name {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 6rpx;
}

.ingredient-amount {
  font-size: 24rpx;
  color: #666;
}

.ingredient-actions {
  display: flex;
  align-items: center;
}

.ingredient-edit {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  margin-right: 10rpx;
}

.ingredient-delete {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 36rpx;
  color: #999;
}

.no-ingredients {
  padding: 40rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.add-ingredient-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  color: #666;
  font-size: 28rpx;
}

.add-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}
.edit-icon {
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  font-size: 24rpx;
  color: #999;
}
