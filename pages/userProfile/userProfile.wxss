.profile-container {
  padding: 40rpx;
  background-color: #fff;
  min-height: 100vh;
}

.profile-header {
  text-align: center;
  margin-bottom: 60rpx;
}

.profile-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.profile-subtitle {
  font-size: 28rpx;
  color: var(--gray-5);
}

.profile-form {
  margin-bottom: 60rpx;
}

.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.avatar-wrapper {
  width: 320rpx !important;
  height: 300rpx;
  border-radius: 50%;
  overflow: hidden;
  padding: 0;
  margin: 0;
  background-color: transparent;
}

.avatar-wrapper::after {
  border: none;
}

.avatar {
  width: 100%;
  height: 100%;
}

.avatar-tip {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: var(--gray-5);
}

.nickname-section {
  margin-bottom: 40rpx;
}

.input-label {
  font-size: 28rpx;
  margin-bottom: 16rpx;
  color: var(--gray-6);
}

.nickname-input {
  height: 88rpx;
  border: 1px solid var(--gray-3);
  border-radius: 8px;
  padding: 0 24rpx;
  font-size: 28rpx;
}

.submit-section {
  margin-top: 80rpx;
}

.submit-btn {
  background-color: var(--primary-color);
  color: #fff;
  border-radius: 8px;
  font-size: 32rpx;
  height: 88rpx;
  /* 使用 Flex 布局让按钮内容居中（垂直/水平） */
  display: flex; /* 关键：启用 Flex 布局 */
  align-items: center; /* 关键：垂直居中文本 */
  justify-content: center; /* 关键：水平居中文本 */
  padding: 0; /* 清除默认 padding，避免居中偏移 */
}

/* 去掉小程序按钮默认的 ::after 边框，避免视觉偏移 */
.submit-btn::after {
  border: none;
}

.logout-btn {
  margin-top: 30rpx;
  background-color: #ff4d4f;
  color: #ffffff;
  border-radius: 8px;
  font-size: 32rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.logout-btn::after {
  border: none;
}
