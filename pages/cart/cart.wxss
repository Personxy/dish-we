.cart-container {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding-bottom: 120rpx;
}

/* 购物车列表 */
.cart-list {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 0 30rpx;
}

.cart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.cart-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--gray-6);
}

.cart-clear {
  font-size: 28rpx;
  color: var(--primary-color);
}

.cart-items {
  padding: 20rpx 0;
}

.cart-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.cart-item:last-child {
  border-bottom: none;
}

.cart-item-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.cart-item-info {
  flex: 1;
}

.cart-item-name {
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
  color: var(--gray-6);
}

.cart-item-counter {
  display: flex;
  align-items: center;
}

.counter-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #999;
}

.counter-btn.active {
  color: var(--primary-color);
}

.counter-number {
  width: 60rpx;
  text-align: center;
  font-size: 30rpx;
}

/* 空购物车状态 */
.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-cart-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-cart-text {
  font-size: 30rpx;
  color: var(--gray-5);
  margin-bottom: 40rpx;
}

.go-order-btn {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
}

/* 订单信息 */
.order-info-section,
.section-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 30rpx;
  color: var(--gray-6);
}

.info-item {
  margin-bottom: 30rpx;
}

.info-label {
  font-size: 28rpx;
  color: var(--gray-5);
  margin-bottom: 20rpx;
}

.time-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 30rpx;
}

.arrow-icon {
  width: 30rpx;
  height: 30rpx;
}

.remark-input-wrap {
  position: relative;
}

.remark-input {
  width: 100%;
  height: 150rpx;
  box-sizing: border-box;
  padding: 20rpx;
  font-size: 28rpx;
  border: 1rpx solid #f0f0f0;
  border-radius: 8rpx;
}

.remark-counter {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  font-size: 24rpx;
  color: var(--gray-4);
}

/* 底部结算栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  border-top: 1rpx solid #f0f0f0;
  z-index: 10;
}

.total-info {
  flex: 1;
  font-size: 30rpx;
}

.submit-btn {
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: var(--primary-color);
  color: #fff;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: 500;
}
