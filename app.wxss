/* 标题样式 */
.title {
  font-size: 16px;
  font-weight: 500;
  margin-bottom: 10px;
}

.subtitle {
  font-size: 14px;
  color: var(--gray-5);
  margin-bottom: 8px;
}

/* 图标样式 */
.icon {
  width: 24px;
  height: 24px;
  vertical-align: middle;
}